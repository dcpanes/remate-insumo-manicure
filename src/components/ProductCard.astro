---
export interface Props {
  producto: {
    id: number;
    nombre: string;
    precio: number;
    cantidad: number;
    imagen: string;
    descripcion: string;
  };
}

const { producto } = Astro.props;
---

<div class="producto-card">
  <div class="producto-imagen-container">
    <img 
      src={producto.imagen} 
      alt={producto.nombre}
      class="producto-imagen"
      loading="lazy"
      decoding="async"
      width="300"
      height="200"
    />
  </div>
  <div class="card-body">
    <h3 class="producto-nombre">{producto.nombre}</h3>
    <div class="precio-container">
      <span class="precio">{producto.precio}</span>
    </div>
    <div class="cantidad-container">
      <span class="cantidad">{producto.cantidad} disponibles</span>
    </div>
    <p class="producto-descripcion">{producto.descripcion}</p>
    <button 
      class="btn-whatsapp"
      data-producto-id={producto.id}
      type="button"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" style="margin-right: 8px;">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.382"/>
      </svg>
      Consultar
    </button>
  </div>
</div>

<style>
  .producto-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    overflow: hidden;
    contain: layout style paint;
  }

  .producto-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.15);
  }

  .producto-imagen-container {
    position: relative;
    overflow: hidden;
    height: 200px;
    background: #f7fafc;
  }

  .producto-imagen {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .producto-card:hover .producto-imagen {
    transform: scale(1.05);
  }

  .card-body {
    padding: 1.5rem;
  }

  .producto-nombre {
    font-size: 1.25rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .precio-container {
    margin-bottom: 0.75rem;
  }

  .precio {
    font-size: 1.5rem;
    font-weight: 700;
    color: #38a169;
  }

  .cantidad-container {
    margin-bottom: 1.5rem;
  }

  .cantidad {
    font-size: 0.9rem;
    color: #718096;
    background: #edf2f7;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
  }

  .producto-descripcion {
    font-size: 0.9rem;
    color: #4a5568;
    line-height: 1.4;
    margin-bottom: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .btn-whatsapp {
    width: 100%;
    background: #25d366;
    color: white;
    border: none;
    padding: 0.875rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .btn-whatsapp:hover {
    background: #128c7e;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(37, 211, 102, 0.4);
  }

  .btn-whatsapp:active {
    transform: translateY(0);
  }
</style>
